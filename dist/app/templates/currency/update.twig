{% extends 'layout.twig' %}

{% block title %}
    Редагування валюти: {{ currency.short_name }}
{% endblock %}

{% block breadcrumb %}
    <ul class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path_for('home.index') }}">Головна</a></li>
        <li class="breadcrumb-item"><a href="{{ path_for('currency.index') }}">Валюти</a></li>
        <li class="breadcrumb-item"><a href="{{ path_for('currency.details', {id: currency.id}) }}">{{ currency.short_name }}</a></li>
        <li class="breadcrumb-item active">Редагування</li>
    </ul>
{% endblock %}

{% block content %}
    <h1 class="mb-4">Редагування валюти: {{ currency.short_name }}</h1>
    <form action="{{ path_for('currency.update') }}" method="POST">
        <div class="form-group">
            <label for="short_name">Коротка назва</label>
            <input class="form-control" name="short_name" id="short_name" value="{{ currency.short_name }}">
        </div>
        <div class="form-group">
            <label for="symbol">Символ</label>
            <input class="form-control" name="symbol" id="symbol" value="{{ currency.symbol }}">
        </div>
        <div class="form-group">
            <div class="form-check">
                <label for="is_actual" class="form-check-label">
                    <input type="checkbox" class="form-check-input"{{ currency.is_actual ? form.checkbox.checked : ''}} name="is_actual" id="is_actual">Актуальність
                </label>
            </div>
        </div>
        <button class="btn btn-success btn-sm">
            Зберігти
        </button>
        <input type="hidden" name="id" id="id" value="{{ currency.id }}">
        {{ form.csrf|raw }}
    </form>
{% endblock %}
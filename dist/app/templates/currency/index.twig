{% extends 'layout.twig' %}

{% block title %}
    Валюти
{% endblock %}

{% block breadcrumb %}
    <ul class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path_for('home.index') }}">Головна</a></li>
        <li class="breadcrumb-item active">Валюти</li>
    </ul>
{% endblock %}

{% block content %}
    <div>
        <h1>Валюти</h1>
        <div class="text-right">
            <a href="{{ path_for("currency.create") }}" class="btn btn-success btn-sm mb-2">Створити</a>
        </div>
        {% if currencies|length %}
            <table class="table table-sm table-striped">
                <tr>
                    <th>ID</th>
                    <th>Коротка назва</th>
                    <th>Символ</th>
                    <th class="w-15 text-center">Актуальність</th>
                    <th class="w-10 text-center">Огляд</th>
                </tr>
            {% for currency in currencies %}
                <tr>
                    <td>{{ currency.id }}</td>    
                    <td>{{ currency.short_name }}</td>    
                    <td>{{ currency.symbol }}</td>    
                    <td class="text-center">{{ currency.is_actual ? icon.check|raw : icon.times|raw }}</td>
                    <td class="text-center">
                        <a href="{{ path_for('currency.details', {'id': currency.id}) }}">{{ icon.search|raw }}</a>
                    </td>
                </tr>
            {% endfor %}
            </table>
        {% endif %}
    </div>
{% endblock %}
{% extends 'layout.twig' %}

{% block title %}
    Валюта: {{ currency.short_name }}
{% endblock %}

{% block breadcrumb %}
    <ul class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path_for('home.index') }}">Головна</a></li>
        <li class="breadcrumb-item"><a href="{{ path_for('currency.index') }}">Валюти</a></li>
        <li class="breadcrumb-item active">{{ currency.short_name }}</li>
    </ul>
{% endblock %}

{% block content %}
    <h1 class="mb-4">Валюта: {{ currency.short_name }}</h1>
    <table class="table table-striped table-sm">
        <tr>
            <th>Коротка назва</th>
            <td>{{ currency.short_name }}</td>
        </tr>
        <tr>
            <th>Символ</th>
            <td>{{ currency.symbol }}</td>
        </tr>
        <tr>
            <th>Aктуальність</th>
            <td>{{ currency.is_actual ? icon.check|raw : icon.times|raw }}</td>
        </tr>
    </table>
    <div class="mt-4">
        <a class="btn btn-success btn-sm" href="{{ path_for('currency.update', {'id': currency.id}) }}">Редагувати</a>
    </div>
{% endblock %}
{% extends 'layout.twig' %}

{% block title %}
    Валюта: {{ currency.short_name }}
{% endblock %}

{% block breadcrumb %}
    <ul class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path_for('home.index') }}">Головна</a></li>
        <li class="breadcrumb-item"><a href="{{ path_for('currency.index') }}">Валюти</a></li>
        <li class="breadcrumb-item active">{{ currency.short_name }}</li>
    </ul>
{% endblock %}

{% block content %}
    <h1 class="mb-4">Валюта: {{ currency.short_name }}</h1>
    <table class="table table-striped table-sm">
        <tr>
            <th>Коротка назва</th>
            <td>{{ currency.short_name }}</td>
        </tr>
        <tr>
            <th>Символ</th>
            <td>{{ currency.symbol }}</td>
        </tr>
        <tr>
            <th>Aктуальність</th>
            <td>
                <a href="#" data-toggle="modal" data-target="#modal" data-entity="{{ currency.id }}" data-name="{{ currency.short_name }}">
                    {{ currency.is_actual ? icon.check|raw : icon.times|raw }}
                </a>
            </td>
        </tr>
    </table>
    <div class="mt-4">
        <a class="btn btn-success btn-sm" href="{{ path_for('currency.update', {'id': currency.id}) }}">Редагувати</a>
    </div>
    <div class="modal fade" id="modal" aria-hidden="true">
        <div class="modal-dialog">
            <form action="{{ path_for('currency.actuality') }}" method="POST">
                <div class="modal-content">
                    <div class="modal-header bg-danger">
                        <h5 class="modal-title text-white">Увага!</h5>
                        <button type="button" class="close text-white" data-dismiss="modal">
                            {{ icon.times|raw }}
                        </button>
                    </div>
                    <div class="modal-body text-center h5 my-4"></div>
                    <div class="modal-footer d-flex justify-content-between">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Скасувати</button>
                        <button type="submit" class="btn btn-danger">Змінити</button>
                    </div>
                </div>
                <input type="hidden" class="input-hidden" name="id" id="{{ currency.id }}">  
                {{ form.csrf|raw }}
            </form>    
        </div>
    </div>
    <script>
        $('#modal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget)
            var entity = button.data('entity')
            var name = button.data('name')
            var modal = $(this)
            modal.find('.modal-body').text('Змінити актуальність: ' + name + '?')
            modal.find('.input-hidden').val(entity)
        })
    </script>
{% endblock %}
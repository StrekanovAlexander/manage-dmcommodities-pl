{% extends 'layout.twig' %}

{% block title %}
    Мова: {{ language.short_name }}
{% endblock %}

{% block breadcrumb %}
    <ul class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path_for('home.index') }}">Головна</a></li>
        <li class="breadcrumb-item"><a href="{{ path_for('language.index') }}">Мови</a></li>
        <li class="breadcrumb-item active">{{ language.short_name }}</li>
    </ul>
{% endblock %}

{% block content %}
    <h1 class="mb-4">Мова: {{ language.short_name }}</h1>
    <table class="table table-striped table-sm">
        <tr>
            <th>Коротка назва</th>
            <td>{{ language.short_name }}</td>
        </tr>
        <tr>
            <th>Aктуальність</th>
            <td>{{ language.is_actual ? icon.check|raw : icon.times|raw }}</td>
        </tr>
    </table>
    <div class="mt-4">
        <a class="btn btn-success btn-sm" href="{{ path_for('language.update', {'id': language.id}) }}">Редагувати</a>
    </div>
{% endblock %}
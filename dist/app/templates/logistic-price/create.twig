{% extends 'layout.twig' %}

{% block title %}
    Додавання міста в прайс логістики
{% endblock %}

{% block breadcrumb %}
    <ul class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path_for('home.index') }}">Головна</a></li>
        <li class="breadcrumb-item"><a href="{{ path_for('logistic.price.index') }}">Ціни на логістику</a></li>
        <li class="breadcrumb-item active">Додавання міста в прайс логістики</li>
    </ul>
{% endblock %}

{% block content %}
    <div>
        <h1 class="mb-4">Додавання міста в прайс логістики</h1>
        <form action="{{ path_for('logistic.price.create') }}" method="POST">
            <div class="form-group">
                <label for="place_id">Місто</label>
                <select class="form-control" name="place_id" id="place_id">
                    {% for place in places %}
                        <option value="{{ place.id }}">{{ place.full_name }}</option>
                    {% endfor %}
                </select>
            </div>
            <div class="form-group">
                <label for="price">Ціна</label>
                <input type="number" value="0" name="price" id="price" class="form-control">
            </div>
            <button class="btn btn-success btn-sm">Зберігти</button> 
            {{ form.csrf|raw }}
        </form>
    </div>
{% endblock %}
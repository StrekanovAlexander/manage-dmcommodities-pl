{% extends 'layout.twig' %}

{% block title %}
    Редагування продукції: {{ product.full_name }}
{% endblock %}

{% block breadcrumb %}
    <ul class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path_for('home.index') }}">Головна</a></li>
        <li class="breadcrumb-item"><a href="{{ path_for('product.index') }}">Продукція</a></li>
        <li class="breadcrumb-item"><a href="{{ path_for('product.details', {id: product.id}) }}">{{ product.full_name }}</a></li>
        <li class="breadcrumb-item active">Редагування</li>
    </ul>
{% endblock %}

{% block content %}
    <h1 class="mb-4">Редагування продукції: {{ product.full_name }}</h1>
    <form action="{{ path_for('product.update') }}" method="POST">
        <div class="form-group">
            <label for="full_name">Назва</label>
            <input class="form-control" name="full_name" id="full_name" value="{{ product.full_name }}">
        </div>
        <div class="form-group">
            <div class="form-check">
                <label for="is_actual" class="form-check-label">
                    <input type="checkbox" class="form-check-input"{{ product.is_actual ? form.checkbox.checked : ''}} name="is_actual" id="is_actual">Актуальність
                </label>
            </div>
        </div>
        <button class="btn btn-success btn-sm">
            Зберігти
        </button>
        <input type="hidden" name="id" id="id" value="{{ product.id }}">
        {{ form.csrf|raw }}
    </form>
{% endblock %}
{% extends 'layout.twig' %}

{% block title %}
    Зміна гасла
{% endblock %}

{% block breadcrumb %}
    <ul class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path_for('home.index') }}">Головна</a></li>
        <li class="breadcrumb-item"><a href="{{ path_for('user.index') }}">Користувачи</a></li>
        <li class="breadcrumb-item"><a href="{{ path_for('user.details', {id: user.id}) }}">{{ user.user_name }}</a></li>
        <li class="breadcrumb-item active">Зміна гасла</li>
    </ul>
{% endblock %}

{% block content %}
    <h1 class="mb-4">Зміна гасла</h1>
    <form action="{{ path_for('user.update.password') }}" method="POST">
        <div class="form-group">
            <label for="username">Логін</label>
            <input class="form-control" name="username" id="username" value="{{ user.user_name }}" disabled>
        </div>
        <div class="form-group">
            <label for="password">Гасло <span class="text-danger">*</span></label>
            <input class="form-control" name="password" id="password" type="password">
        </div>
        <div class="form-group">
            <label for="password2">Гасло (повтор) <span class="text-danger">*</span></label>
            <input class="form-control" name="password2" id="password2" type="password">
        </div>
        <p class="text-danger">* {{ form.strvalid }}</p>
        <button class="btn btn-success btn-sm">
            Зберігти
        </button>
        <input type="hidden" name="id" id="id" value="{{ user.id }}">
        {{ form.csrf|raw }}
    </form>
{% endblock %}
{% extends 'layout.twig' %}

{% block title %}
    Iнформація про користувача
{% endblock %}

{% block breadcrumb %}
    <ul class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path_for('home.index') }}">Головна</a></li>
        <li class="breadcrumb-item"><a href="{{ path_for('user.index') }}">Користувачи</a></li>
        <li class="breadcrumb-item active">{{ user.user_name }}</li>
    </ul>
{% endblock %}

{% block content %}
    <h1>Iнформація про користувача</h1>
    <div class="row mt-4">
        <div class="col">
            <ul  class="list-group">
                <li class="list-group-item">
                    Ім'я: <span class="ml-2">{{ user.user_name }}</span>
                </li>
                <li class="list-group-item">
                    Всі права: <span class="ml-2">{{ user.is_root ? icon.check|raw : icon.times|raw }}</span>
                </li>
                <li class="list-group-item">
                    Aктуальність: <span class="ml-2">{{ user.is_actual ? icon.check|raw : icon.times|raw }}</span>
                </li>
            </ul>
        </div>
    </div>    
    <div class="mt-4 d-flex justify-content-between">
        {# {% if user.user_name != 'admin' %} #}    
            <a class="btn btn-success btn-sm" href="{{ path_for('user.update', {'id': user.id}) }}">Редагувати</a>
        {# {% endif %}  #} 
            <a class="btn btn-secondary btn-sm" href="{{ path_for('user.update.password', {'id': user.id}) }}">Зміна гасла</a>
        {# </div>    #}
    </div>
{% endblock %}
{% extends 'layout.twig' %}

{% block title %}
    Користувач: {{ user.user_name }}
{% endblock %}

{% block breadcrumb %}
    <ul class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path_for('home.index') }}">Головна</a></li>
        <li class="breadcrumb-item"><a href="{{ path_for('user.index') }}">Користувачи</a></li>
        <li class="breadcrumb-item active">{{ user.user_name }}</li>
    </ul>
{% endblock %}

{% block content %}
    <h1 class="mb-4">Користувач: {{ user.user_name }}</h1>
    <table class="table table-striped table-sm">
        <tr>
            <th>Ім'я</th>
            <td>{{ user.user_name }}</td>
        </tr>
        <tr>
            <th>Всі права</th>
            <td>{{ user.is_root ? icon.check|raw : icon.times|raw }}</td>
        </tr>
        <tr>
            <th>Aктуальність</th>
            <td>
                {{ user.is_actual ? icon.check|raw : icon.times|raw }}
            </td>
        </tr>
    </table>
    <div class="mt-4 d-flex justify-content-between">
        <a class="btn btn-success btn-sm" href="{{ path_for('user.update', {'id': user.id}) }}">Редагувати</a>
        <a class="btn btn-secondary btn-sm" href="{{ path_for('user.update.password', {'id': user.id}) }}">Зміна гасла</a>
    </div>
{% endblock %}
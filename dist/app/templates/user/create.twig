{% extends 'layout.twig' %}

{% block title %}
    Створення користувача
{% endblock %}

{% block breadcrumb %}
    <ul class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path_for('home.index') }}">Головна</a></li>
        <li class="breadcrumb-item"><a href="{{ path_for('user.index') }}">Користувачи</a></li>
        <li class="breadcrumb-item active">Створення користувача</li>
    </ul>
{% endblock %}

{% block content %}
    <div>
        <h1 class="mb-4">Створення користувача</h1>
        <form action="{{ path_for('user.create') }}" method="POST">
            <div class="form-group">
                <label for="username">Логін</label>
                <input type="text" name="username" id="username" class="form-control">
            </div>
            <ul>
                {% for condition in conditions %}
                    <li class="small text-secondary">{{ condition }}</li>
                {% endfor %}
            </ul>
            <button class="btn btn-success btn-sm">Зберігти</button> 
            {{ form.csrf|raw }}
        </form>
    </div>
{% endblock %}
{% extends 'layout.twig' %}

{% block title %}
    Створення користувача
{% endblock %}

{% block breadcrumb %}
    <ul class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path_for('home.index') }}">Головна</a></li>
        <li class="breadcrumb-item"><a href="{{ path_for('user.index') }}">Користувачи</a></li>
        <li class="breadcrumb-item active">Створення користувача</li>
    </ul>
{% endblock %}

{% block content %}
    <div>
        <h1>Створення користувача</h1>
        <form action="{{ path_for('user.create') }}" method="POST">
            <div class="form-group">
                <label for="username">Логін  <span class="text-danger">*</span></label>
                <input type="text" name="username" id="username" class="form-control">
            </div>
            <p class="text-danger">* Не коротше 5 символів латинських літер або цифр</p>
            <button class="btn btn-success">Зберігти</button> 
            {{ form.csrf|raw }}
        </form>
    </div>
{% endblock %}
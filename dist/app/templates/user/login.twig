{% extends 'layout.twig' %}

{% block title %}
    Вхід
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col col-lg-4 col-md-6 col-sm-8 mx-auto mt-5">
            <div class="card">
                <div class="card-header">
                    <img src="https://dmcommodities.pl/img/Logo_DM_fin.svg" alt="DM COMMODITIES SP.Z O.O." style="width: 100px">
                </div>
                <div class="card-body">
                    <form action="{{ path_for('user.login') }}" method="POST">
                        <div class="form-group">
                            <input class="form-control" id="username"  name="username" type="text" placeholder="Логін">
                        </div> 
                        <div class="form-group">
                            <input class="form-control" id="password" name="password" type="password" placeholder="Гасло">
                        </div>
                        <div class="text-center my-4">
                            <button class="btn btn-light form-control" type="submit">Увійти</button>
                        </div>
                        {{ form.csrf|raw }}
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
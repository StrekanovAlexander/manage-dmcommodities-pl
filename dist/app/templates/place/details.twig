{% extends 'layout.twig' %}

{% block title %}
    Місто: {{ place.full_name }}
{% endblock %}

{% block breadcrumb %}
    <ul class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path_for('home.index') }}">Головна</a></li>
        <li class="breadcrumb-item"><a href="{{ path_for('place.index') }}">Мови</a></li>
        <li class="breadcrumb-item active">{{ place.full_name }}</li>
    </ul>
{% endblock %}

{% block content %}
    <h1 class="mb-4">Місто: {{ place.full_name }}</h1>
    <table class="table table-striped table-sm">
        <tr>
            <th>Назва</th>
            <td>{{ place.full_name }}</td>
        </tr>
        <tr>
            <th>Aктуальність</th>
            <td>
                <a href="#" data-toggle="modal" data-target="#modal" data-entity="{{ place.id }}" data-name="{{ place.full_name }}">
                    {{ place.is_actual ? icon.check|raw : icon.times|raw }}
                </a>
            </td>
        </tr>
    </table>
    <div class="mt-4 d-flex justify-content-between">
        <a class="btn btn-success btn-sm" href="{{ path_for('place.update', {'id': place.id}) }}">Редагувати</a>
        <a class="btn btn-primary btn-sm" href="{{ path_for("place.translate.create", {'id': place.id}) }}">Додати переклад</a>
    </div>
    <h2 class="mt-4 mb-2">Переклади</h2>
    <table class="table table-sm table-striped">
        <tr>
            <th>ID</th>
            <th>Назва</th>
            <th class="w-15 text-center">Актуальність</th>
            <th class="w-10 text-center">Огляд</th>
        </tr>
    </table>

    <div class="modal fade" id="modal" aria-hidden="true">
        <div class="modal-dialog">
            <form action="{{ path_for('place.actuality') }}" method="POST">
                <div class="modal-content">
                    <div class="modal-header bg-danger">
                        <h5 class="modal-title text-white">Увага!</h5>
                        <button type="button" class="close text-white" data-dismiss="modal">
                            {{ icon.times|raw }}
                        </button>
                    </div>
                    <div class="modal-body text-center h5 my-4"></div>
                    <div class="modal-footer d-flex justify-content-between">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Скасувати</button>
                        <button type="submit" class="btn btn-danger">Змінити</button>
                    </div>
                </div>
                <input type="hidden" class="input-hidden" name="id" id="{{ place.id }}">  
                {{ form.csrf|raw }}
            </form>    
        </div>
    </div>
    <script>
        $('#modal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget)
            var entity = button.data('entity')
            var name = button.data('name')
            var modal = $(this)
            modal.find('.modal-body').text('Змінити актуальність: ' + name + '?')
            modal.find('.input-hidden').val(entity)
        })
    </script>
{% endblock %}